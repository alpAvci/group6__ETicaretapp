@using ETicaretApp.DAL
@model ETicaretApp.EntitiesLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryFetch";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>KATEGORİ GÜNCELLEME SAYFASI</h1>
<br />

@using (Html.BeginForm("CategoryUpdate","Category",FormMethod.Post)){
    <div class="form-group">
        @Html.LabelFor(x => x.CategoryName)
        @Html.TextBoxFor(x => x.CategoryName, new {@class = "from-control"})

       
        @Html.LabelFor(x => x.CategoryDescription)
        @Html.TextBoxFor(x => x.CategoryDescription, new {@class = "from-control"})

        @Html.HiddenFor(x => x.CategoryId)

    </div>
    <br />
   <button class="btn btn-warning">Güncelle</button>

}